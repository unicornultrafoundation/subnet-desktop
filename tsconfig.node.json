{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/daemon/**/*",
    "src/utils/**/*",
    "scripts/**/*",
    "src/**/*.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "types": [
      "electron-vite/node"
    ],
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@pkg/*": ["src/*"],
    }
  }
}